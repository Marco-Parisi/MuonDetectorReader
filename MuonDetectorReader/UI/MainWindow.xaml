<Window x:Class="MuonDetectorReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MuonDetectorReader"     
        xmlns:ext="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d" UseLayoutRounding="True" WindowStartupLocation="CenterOwner"
        Title="Muon Detector Reader" MinHeight="660" MinWidth="900" Height="660" Width="900">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="{Binding ActualHeight, ElementName=WinBarGrid}" CornerRadius="0" GlassFrameThickness="0"/>
    </WindowChrome.WindowChrome>

    <Border BorderBrush="Black" BorderThickness="1" CornerRadius="0">
        <DockPanel LastChildFill="True">
            <Grid Height="32" x:Name="WinBarGrid" DockPanel.Dock="Top" 
                  Margin="0" Background="LightGray">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="2"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="4"/>
                </Grid.ColumnDefinitions>
                <TextBlock Name="WindowTitle" Margin="20 10 0 0" FontWeight="Bold" Grid.RowSpan="3" HorizontalAlignment="Left" FontSize="{StaticResource FixedFontSize}"/>
                <Button Grid.Row="1" WindowChrome.IsHitTestVisibleInChrome="True" Grid.Column="1"
                        Click="ShowHelpClick" Height="22" Width="30" Padding="0" Background="WhiteSmoke">
                    <TextBlock Text="?" FontSize="15" FontWeight="Bold"/>
                </Button>
                <Button Grid.Row="1" WindowChrome.IsHitTestVisibleInChrome="True" Grid.Column="2"
                        Click="MinimizeClick" Height="22" Width="30" Padding="0" Background="WhiteSmoke">
                    <Line X1="0" X2="10" Y1="12" Y2="12" Stroke="{StaticResource ButtonForegroundBrush}"/>
                </Button>
                <Button x:Name="MaximizeButton" Grid.Row="1" WindowChrome.IsHitTestVisibleInChrome="True"
                        Grid.Column="3" Click="MaximizeClick" Height="22" Width="30" Background="WhiteSmoke">
                    <Grid Opacity=".8">
                        <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Rectangle Height="11" Width="14" StrokeThickness="1.3"  Stroke="{StaticResource ButtonForegroundBrush}" RadiusX="1" RadiusY="1"/>
                            <Line X1="0" X2="14" Y1="2.3" Y2="2.3" StrokeThickness="1.3" Stroke="{StaticResource ButtonForegroundBrush}"/>
                        </Grid>
                        <Grid Opacity="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Border Background="{StaticResource ButtonBackgroundBrush}" Margin="-3,-1"/>
                            <Rectangle Height="10" Width="12" StrokeThickness="1.3" Stroke="{StaticResource ButtonForegroundBrush}" Margin="0 -1 -2 0" RadiusX="1" RadiusY="1"/>
                            <Rectangle Height="10" Width="12" StrokeThickness="1.3" Stroke="{StaticResource ButtonForegroundBrush}" Margin="-3 2 0 0" RadiusX="1" RadiusY="1" />
                        </Grid>
                    </Grid>
                </Button>
                <Button Grid.Row="1" WindowChrome.IsHitTestVisibleInChrome="True" Background="OrangeRed"
                        Grid.Column="4" Click="CloseClick" Height="22" Width="30">
                    <Grid Opacity=".8">
                        <Line X1="0" X2="10" Y1="0" Y2="10" StrokeThickness="1.5" Stroke="{StaticResource ButtonForegroundBrush}"/>
                        <Line X1="0" X2="10" Y1="10" Y2="0" StrokeThickness="1.5" Stroke="{StaticResource ButtonForegroundBrush}"/>
                    </Grid>
                </Button>
                <Line Stroke="{Binding Source={x:Static SystemParameters.WindowGlassBrush}}" 
                      Grid.Row="2" Grid.ColumnSpan="5" StrokeThickness="0.5" 
                      X2="{Binding Width, RelativeSource={RelativeSource FindAncestor,AncestorType=Window}}"/>
            </Grid>

            <Grid x:Name="MainGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="{StaticResource MenuHeight}"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                        <StackPanel VerticalAlignment="Center">
                            <Button Margin="0, 10, 10, 10" Click="Open_Click" Width="80" Height="24" 
                                    BorderThickness="1" BorderBrush="Black" Background="WhiteSmoke"
                                    VerticalAlignment="Center">
                                Apri File
                            </Button>
                            <Button Visibility="Visible" Margin="0, 6, 10, 0" Click="Fluxgate_Click" Width="70" Height="24" Foreground="White">
                                Fluxgate
                                <Button.Background>
                                    <LinearGradientBrush>
                                        <GradientStop Offset="0.0" Color="DodgerBlue"/>
                                        <GradientStop Offset="0.95" Color="Blue"/>
                                    </LinearGradientBrush>
                                </Button.Background>
                            </Button>
                        </StackPanel>
                        <Line Y1="23" Y2="{StaticResource DoubleMenuHeight}" Stroke="Black" HorizontalAlignment="Center" StrokeThickness="0.5"/>

                        <StackPanel>
                            <TextBlock Text="Correzione Pressione" FontSize="14" Margin="2" TextAlignment="Center" HorizontalAlignment="Center"/>
                            <Line X1="0" X2="210" Stroke="Black" HorizontalAlignment="Left" StrokeThickness="0.5"/>
                            <StackPanel x:Name="BetaPanel" IsEnabled="False" Margin="5,5,5,0">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="Valore β salvato :" Margin="0,3" VerticalAlignment="Center"
                                               FontWeight="SemiBold"/>
                                    <TextBox Text="nessuno" x:Name="BetaBox" Margin="2,5" IsHitTestVisible="False" BorderBrush="White"
                                             VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Width="65" Height="23"
                                             FontWeight="Bold" FontSize="13"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="P0:" Margin="3" VerticalAlignment="Center"/>
                                        <TextBox Text="1013,25" Padding="2,0" x:Name="PressBox" Margin="0,5" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Width="60" Height="23" PreviewTextInput="PressBoxInput" PreviewKeyDown="PressBoxPreviewKeyDown" TextChanged="PressBoxTextChanged"/>
                                        <TextBlock Text="mBar" Margin="3" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <Button Margin="5,0" Click="Graph_Click" Width="65" Height="24" Tag="Beta" Background="#FFA00000" Foreground="White">
                                        Stima Beta
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>

                        <Line Y1="0" Y2="{StaticResource DoubleMenuHeight}" Stroke="Black" HorizontalAlignment="Center" StrokeThickness="0.5"/>

                        <StackPanel>
                            <Line X1="0" X2="465" Stroke="Black" HorizontalAlignment="Left" StrokeThickness="0.5"/>
                            <StackPanel IsEnabled="False" Name="GraficiPanel" Margin="0,0,0,0" Orientation="Horizontal" Height="{StaticResource DoubleMenuHeight}">
                                <Grid Margin="15,0,10,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Button Grid.Row="0" Click="Graph_Click" Width="80" Height="24" Tag="CG" Background="#FF007800" Foreground="White">
                                        Cont. Grezzi
                                    </Button>
                                    <Button Grid.Row="0" Grid.Column="2" Click="Graph_Click" Width="85" Height="24" Tag="CC" Background="#FF326EC8" Foreground="White">
                                        Cont. Corretti
                                    </Button>
                                    <Button Grid.Row="1" Click="Graph_Click" Width="80" Height="24" Tag="Press" Background="#FFDF9010" Foreground="White">
                                        Pressione
                                    </Button>
                                    <Button Grid.Row="1" Grid.Column="2" Click="Graph_Click" Width="85" Height="24" Tag="Temp" Background="#FF9F20D8" Foreground="White">
                                        Temperatura
                                    </Button>
                                    <Button Grid.Row="2" Grid.Column="1" Margin="5,0" Click="DoubleGraph_Click" Width="90" Height="24" Background="LightBlue" FontWeight="Bold">
                                        Altro Grafico...
                                    </Button>
                                    <Button Grid.Row="2" Click="Graph_Click" Width="75" Height="24" HorizontalAlignment="Left" Tag="SIGMA" Background="IndianRed" Foreground="White">
                                        Scarto 2σ
                                    </Button>
                                </Grid>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="2*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.RowSpan="2" HorizontalAlignment="Left" Orientation="Horizontal">
                                        <StackPanel VerticalAlignment="Center">
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,4,0,0">
                                                <TextBlock Text="  Rimuovi Outliers "/>
                                                <CheckBox Width="18" Name="OutlierBox" IsEnabled="False" Click="OutliersBox_Click"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,4,0,0">
                                                <TextBlock Text="Corr. Temperatura ">
                                                    <TextBlock.ToolTip>
                                                        <ToolTip Background="OrangeRed">
                                                            <TextBlock Foreground="Black" FontWeight="Bold">
                                                                Valido solo per il rilevatore EKAR
                                                            </TextBlock>
                                                        </ToolTip>
                                                    </TextBlock.ToolTip>
                                                </TextBlock>
                                                <CheckBox Width="18" Name="TempCorrBox" IsEnabled="False" Click="TempCorrBox_Click">
                                                    <CheckBox.ToolTip>
                                                        <ToolTip Background="OrangeRed">
                                                            <TextBlock Foreground="Black" FontWeight="Bold">
                                                                Valido solo per il rilevatore EKAR
                                                            </TextBlock>
                                                        </ToolTip>
                                                    </CheckBox.ToolTip>
                                                </CheckBox>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,4,0,0">
                                                <TextBlock Text="Maschera Dati "/>
                                                <CheckBox Width="18" x:Name="ShowHideData" IsEnabled="True" Click="ShowHideData_Click"/>
                                            </StackPanel>
                                        </StackPanel>
                                        <StackPanel>
                                            <StackPanel Orientation="Vertical" Margin="14 5 0 1">
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <TextBlock Text="Outlier Sigma: "/>
                                                    <TextBlock x:Name="OutlierSigmaValue" Text="2σ"/>
                                                </StackPanel>
                                                <Slider Width="100" ValueChanged="OutlierSlider_ValueChanged"
                                                    Name="OutlierSlider" IsSnapToTickEnabled="True" IsEnabled="False"
                                                    TickFrequency="0.25" Minimum="0.25" Maximum="5" Value="2"
                                                    TickPlacement="None"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Vertical" Margin="14 5 0 1">
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <TextBlock Text="Media Mobile: "/>
                                                    <TextBlock x:Name="SmoothValue" Text="6pt"/>
                                                </StackPanel>
                                                <Slider Width="100" ValueChanged="AvgSlider_ValueChanged"
                                                        Name="AvgSlider" IsSnapToTickEnabled="True" IsEnabled="False"
                                                        TickFrequency="2" Minimum="2" Maximum="48" Value="6"
                                                        TickPlacement="None"/>
                                            </StackPanel>

                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel Grid.Row="2" x:Name="DatePickerPanel" Orientation="Horizontal" HorizontalAlignment="Center" Margin="-5,3">
                                        <TextBlock Text="Dal: " VerticalAlignment="Center" Visibility="Collapsed"/>
                                        <!--<local:CustomDatePicker Visibility="Collapsed" x:Name="DateFrom" WatermarkText="Data inizio" Focusable="False" Width="95"/>-->
                                        <ext:DateTimePicker x:Name="DateFrom" Focusable="False" Width="125" Margin="0 0 5 0" FontSize="{StaticResource FixedFontSize}"
                                                            ClipValueToMinMax="True" Format="Custom" FormatString="dd/MM/yy HH:mm"/>
                                        <TextBlock Text="-" VerticalAlignment="Center" Visibility="Collapsed"/>
                                        <!--<local:CustomDatePicker Visibility="Collapsed" x:Name="DateTo" WatermarkText="Data fine" Focusable="False" Width="95"/>-->
                                        <ext:DateTimePicker x:Name="DateTo" Focusable="False" Width="125" Margin="5 0 0 0" FontSize="{StaticResource FixedFontSize}"
                                                            ClipValueToMinMax="True" Format="Custom" FormatString="dd/MM/yy HH:mm"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </StackPanel>

                        <Line Y1="0" Y2="{StaticResource DoubleMenuHeight}" Stroke="Black" HorizontalAlignment="Center" StrokeThickness="0.5"/>

                        <StackPanel Margin="10,25, 0, 0" IsEnabled="False" Name="ExportPanel">
                            <Button Margin="0,0,0,5" Click="ExportGraph_Click" Width="90" Height="24">
                                Esporta Grafico
                            </Button>
                            <Button Margin="0,5,0,0" Click="ExportFile_Click" Width="75" Height="24">
                                Esporta File
                            </Button>
                        </StackPanel>

                    </StackPanel>
                    <Line X1="0" X2="{Binding ElementName=MainGrid,Path=ActualWidth}" Stroke="Black" StrokeThickness="0.5"/>
                </StackPanel>
                <StackPanel x:Name="MessageStack" Grid.Row="1" Width="900" VerticalAlignment="Top">
                    <TextBlock x:Name="MessageTextblock"  HorizontalAlignment="Center" VerticalAlignment="Center" 
                               TextAlignment="Center" LineHeight="20" Margin="0,10,0,20">
                        <Run Text="Cliccare su" 
                             FontSize="24"
                             FontWeight="Normal"/>
                        <Run Text="Apri File" 
                             FontSize="24"
                             FontWeight="Bold"/>
                        <Run Text="per leggere i dati." 
                             FontSize="24"
                             FontWeight="Normal"/>
                        <LineBreak/>
    
                        <Run Text="(Per stimare Beta utilizzare un file con almeno 2 mesi di dati)" 
                             FontSize="20" 
                             Foreground="DimGray" 
                             FontStyle="Italic"/>
                    </TextBlock>
                    
                    <TextBlock TextWrapping="Wrap" FontSize="18"  VerticalAlignment="Center"
                               HorizontalAlignment="Center" TextAlignment="Left">
                        <Run Text="FORMATO DEI DATI" 
                             FontWeight="Bold" 
                             TextDecorations="Underline"/>
                        <Run Text=" (Separatori accettati: virgola ',' oppure asterisco '*')" 
                             FontSize="18" 
                             Foreground="DimGray"
                             FontStyle="Italic"/>
                        <LineBreak/>
                        <Run Text="File di testo (.txt o .csv) con 4 colonne →"/>
    
                        <Run Text="Data e Ora" FontStyle="Italic" FontWeight="Medium"/>
                        <Run Text=" | " Foreground="LightGray"/>
                        <Run Text="Temp" FontStyle="Italic" FontWeight="Medium"/>
                        <Run Text=" | " Foreground="LightGray"/>
                        <Run Text="Pressione" FontStyle="Italic" FontWeight="Medium"/>
                        <Run Text=" | " Foreground="LightGray"/>
                        <Run Text="Conteggi" FontStyle="Italic" FontWeight="Medium"/>
                        <LineBreak/>
                        <LineBreak/>
                        
                        <Run Text="GUIDA" 
                             FontWeight="Bold" 
                             TextDecorations="Underline"/>
                        <LineBreak/>

                        <Run Text="Rimuovi Outliers"
                             FontWeight="Bold" 
                             Foreground="#005A9E"/> 
                        <Run Text="→ Sostituisce i dati fuori dall'intervallo"/>
                        <Run Text="Media ± Nσ" FontStyle="Italic"/> <Run Text="con la media dei dati adiacenti."/>
                        <LineBreak/>

                        <Run Text="Corr. Temperatura" 
                             FontWeight="Bold" 
                             Foreground="#800080"/>
                        <Run Text="→ Corregge i dati dalla temperatura per rivelatore"/>
                        <Run Text="EKAR." FontWeight="bold"/>
                        <LineBreak/>

                        <Run Text="Media Mobile" 
                             FontWeight="Bold" 
                             Foreground="#00a010"/>
                        <Run Text="→ Plotta una linea che interpola un numero pari a"/>
                        <Run Text="N" FontStyle="Italic"/> <Run Text="pt per ridurre le variazioni rapide."/>
                        <LineBreak/>
                        
                        <Run Text="Altro Grafico" 
                             FontWeight="Bold" 
                             Foreground="#d08000"/>
                        <Run Text="→ Plotta due grafici usando l'asse delle ordinate destro e sinistro"/>
                        <LineBreak/>
                        
                        <Run Text="Esporta Grafico" FontWeight="Bold"/>
                        <Run Text="→ Slava il grafico in png sul desktop."/>     
                        <LineBreak/>
                        <Run Text="Esporta File" FontWeight="Bold"/>
                        <Run Text="→ Salva i dati corretti in txt sul desktop"/>     
                        <LineBreak/>
                        <Run Text="Fluxgate" 
                             FontWeight="Bold">         
                            <Run.Foreground>
                                <LinearGradientBrush>
                                    <GradientStop Offset="0.0" Color="DodgerBlue"/>
                                    <GradientStop Offset="0.95" Color="Blue"/>
                                </LinearGradientBrush>
                            </Run.Foreground>
                        </Run>
                        <Run Text="→ Legge i dati del rilevatore Fluxgate con le colonne →"/>
                        <Run Text="Data e Ora" FontStyle="Italic" FontWeight="Medium"/>
                        <Run Text=" | " Foreground="LightGray"/>
                        <Run Text="Upper" FontStyle="Italic" FontWeight="Medium"/>
                        <Run Text=" | " Foreground="LightGray"/>
                        <Run Text="Lower" FontStyle="Italic" FontWeight="Medium"/>
                        <Run Text=" |  " Foreground="LightGray"/>
                        <Run Text="Diff" FontStyle="Italic" FontWeight="Medium"/>
                        <LineBreak/>
                        <LineBreak/>
                        
                        <Run Text="INFO" 
                             FontWeight="Bold" 
                             TextDecorations="Underline"/>
                        <LineBreak/>
                        <Run Text="•" FontWeight="Bold"/>
                        <Run Text="I conteggi sono espressi in % rispetto alla media."/>
                        <LineBreak/>
                        
                        <Run Text="•" FontWeight="Bold"/>
                        <Run Text="La retta nera tratteggiata rappresenta il valore medio dei dati selezionati."/>
                        <LineBreak/>
                        
                        <Run Text="•" FontWeight="Bold"/>
                        <Run Text="Si possono ingrandire gli assi tramite la rotellina del mouse con il puntatore su uno di essi."/>
                        <LineBreak/>
                        
                        <Run Text="•" FontWeight="Bold"/>
                        <Run Text="Quando l'intervallo di date è ≤ di 3 giorni, comparirà l'intervallo di confidenza dei dati."/>     
                      
                    </TextBlock>
                </StackPanel>
                <!--Cliccare su Media File per effettuare la media dei dati di 2 o più rilevatori.-->

                <Grid Grid.RowSpan="2" Width="670" Name="DoubleGraphPanel"
                      VerticalAlignment="Top" HorizontalAlignment="Center" Visibility="Collapsed">
                    <Grid.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="Transparent" Offset="0.0" />
                            <GradientStop Color="#AF000000" Offset="0.3" />
                            <GradientStop Color="#AF000000" Offset=".5"/>
                            <GradientStop Color="#AF000000" Offset=".7" />
                            <GradientStop Color="Transparent" Offset="1" />
                        </LinearGradientBrush>
                    </Grid.Background>
                    <Border Background="White" Height="85" Width="265" BorderBrush="Black" BorderThickness="1" Margin="0,5">
                        <StackPanel Orientation="Horizontal">
                            <Grid>
                                <StackPanel Margin="3,3,5,2">
                                    <CheckBox Name="DG_CG" Content="Cont. Grezzi" Checked="CheckBox_Checked"/>
                                    <CheckBox Name="DG_CCP"  Content="Cont. Corr. Press." Checked="CheckBox_Checked"/>
                                    <CheckBox Name="DG_CCPT" Content="Cont. Corr. Press. e Temp." Checked="CheckBox_Checked"/>
                                </StackPanel>
                                <Button Content="Chiudi" VerticalAlignment="Bottom" Margin="45,5" Click="DoubleGraph_Click"/>
                            </Grid>
                            <Line Stroke="Black" StrokeThickness="1" Y1="5" Y2="80"/>
                            <Grid>
                                <StackPanel Margin="5,3,3,2">
                                    <CheckBox Name="DG_P" Content="Pressione" Checked="CheckBox_Checked"/>
                                    <CheckBox Name="DG_T" Content="Temperatura" Checked="CheckBox_Checked"/>
                                </StackPanel>
                                <Button Content="OK" VerticalAlignment="Bottom" Margin="25,5" Click="DoubleGraphOK_Click"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </DockPanel>
    </Border>
</Window>
